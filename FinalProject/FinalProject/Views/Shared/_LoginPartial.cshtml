@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, 
        new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink(Resources.Translations.CreateAPostcard, 
               "CreatePostcard", "Postcard", null, new { style = "color:#ededed" })</li>
            <li>
                @Html.ActionLink(Resources.Translations.Settings, "Index", 
               "Manage", routeValues: null, htmlAttributes: new { style = "color:#ededed" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" 
                   style="color:#ededed">@Resources.Translations.LogOff</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Resources.Translations.Register, "Register", "Account", routeValues: null,
           htmlAttributes: new { id = "registerLink", style = "color:#ededed" })</li>
        <li>@Html.ActionLink(Resources.Translations.LogIn, "Login", "Account", routeValues: null,
           htmlAttributes: new { id = "loginLink", style = "color:#ededed" })</li>
    </ul>
}
