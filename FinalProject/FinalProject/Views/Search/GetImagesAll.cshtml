@using FinalProject.Models
@model IEnumerable<Postcard>

@{
    ViewBag.Title = Resources.Translations.Search;
}

<br />
<h2>@Resources.Translations.Search: @ViewBag.SearchingValue</h2>
<br />

<div class="thumbnails">
    <center>
        @foreach (var postcard in Model)
        {
            <a href="/Postcard/GetPostcardPage?id=@postcard.Id">
                <img src="@postcard.ThumbnailUrl" alt="@postcard.Name"
                     style="margin:10px" title="@postcard.Name">
            </a>
        }
    </center>
</div>