@{
    ViewBag.Title = Resources.Translations.Home;
}

@section styles
{
    <link type="text/css" rel="stylesheet" href="~/Content/JQCloud/jqcloud.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/OwlCarousel/owl.carousel.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/OwlCarousel/owl.theme.css" />
}

<br />

<div class="container">
    <div id="main-carousel" class="owl-carousel owl-theme">
        <div id="cloud-container" class="item">
            <img id="cloud-loader" src="~/Content/OwlCarousel/AjaxLoader.gif"
                 style="position: absolute;margin: auto;top: 0;left: 0;right: 0;
                 bottom: 0;" />
            <div id="cloud-area" class="container" style="width:100%;height:100%"></div>
        </div>
        <div id="top-container" class="item" style="margin:15px">
            <center>
                <h1>@Resources.Translations.TopFive</h1>
                <br />
                <img id="top-loader" src="~/Content/OwlCarousel/AjaxLoader.gif"
                     style="top:0;bottom:0;margin:auto;position:absolute" />
                <div id="top-postcards" class="thumbnails"></div>
            </center>
        </div>
        <div id="lately-added-container" class="item" style="margin:15px">
            <center>
                <h1>@Resources.Translations.TenLatelyAdded</h1>
                <br />
                <img id="lately-added-loader" src="~/Content/OwlCarousel/AjaxLoader.gif"
                     style="top:0;bottom:0;margin:auto;position:absolute" />
                <div id="lately-added-postcards" class="thumbnails"></div>
            </center>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/Scripts/JQCloud/jqcloud.js"></script>
    <script type="text/javascript" src="~/Scripts/OwlCarousel/owl.carousel.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Common/loadOwlCarousel.js"></script>
}